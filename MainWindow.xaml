<Window x:Class="Shop_Kazakov.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Shop_Kazakov"
        mc:Ignorable="d"
        Title="Shop" Height="450" Width="800" MinHeight="450" MinWidth="800">
    <Grid>
        <ScrollViewer HorizontalScrollBarVisibility="Visible" VerticalScrollBarVisibility="Hidden">
            <StackPanel x:Name="parent" Orientation="Horizontal" />
        </ScrollViewer>

        <TextBox x:Name="SerchTextBox"
         Height="36"
         Width="126"
         HorizontalAlignment="Left"
         VerticalAlignment="Top"
         Margin="10" />

        <Button Click="Search"
        Content="Найти"
        Height="36"
        Width="80"
        HorizontalAlignment="Left"
        VerticalAlignment="Top"
        Margin="140,10,0,0" />
    </Grid>
</Window>
